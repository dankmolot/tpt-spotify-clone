{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "src/**/*",
            ".vscode/*",
            "index.html",
            "vite.config.ts",
            "!src/routeTree.gen.ts"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": {
                    "level": "warn",
                    "fix": "safe"
                }
            },
            "a11y": {
                "useMediaCaption": "off"
            },
            "suspicious": {
                "noEmptyInterface": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "asNeeded"
        }
    }
}
